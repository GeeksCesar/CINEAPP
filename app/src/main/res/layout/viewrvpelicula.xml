<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:elevation="6dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/contenedorImagen"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp">

            <ProgressBar
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivPelicula"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitlePelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/contenedorImagen"
            android:text="Title Center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvYearPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitlePelicula"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/contenedorImagen"
            android:text="2016"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_subtitle" />


        <TextView
            android:id="@+id/signoPesos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYearPelicula"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/contenedorImagen"
            android:text="$"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvPrecioPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/signoPesos"
            android:layout_marginLeft="3dp"
            android:text="5000"
            android:textSize="@dimen/size_subtitle"
            android:layout_toRightOf="@+id/signoPesos"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.v7.widget.CardView>